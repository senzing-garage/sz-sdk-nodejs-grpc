{
    "compilerOptions": {
      "target": "es5",
      "composite": true,
      "module": "commonjs",
      "lib": [
        "es6"
      ],
      "allowJs": false,
      "outDir": "dist/@senzing/sz-sdk-nodejs-grpc",
      "rootDir": "./",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "removeComments": false,
      "sourceMap": true,
      "declaration": true,
      "noEmitOnError": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist",
      "dist/**/*",
      "node_modules",
      "examples",
      "examples/*",
      "examples/**",
      "examples/**/*",
      "package-lock.json",
      "package.json",
      "build.js"
    ]
}